{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Plantlog",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of Plantlog app"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "Plants",
      "description": "Operations about plants."
    },
    {
      "name": "Auth",
      "description": "Auth operations."
    }
  ],
  "paths": {
    "/plants": {
      "get": {
        "tags": [
          "Plants"
        ],
        "summary": "Get all plants",
        "operationId": "getAllPlants",
        "description": "Returns a list of all plants available to users",
        "security": [],
        "parameters": [
          {
            "name": "growthForm",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "tree",
                "shrub",
                "herb",
                "grass",
                "vine",
                "succulent",
                "fern",
                "moss"
              ]
            },
            "description": "Filter plants by growth form"
          },
          {
            "name": "origin",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "wild",
                "cultivated"
              ]
            },
            "description": "Filter plant by origin"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully fetched plant list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/plant"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "post": {
        "tags": [
          "Plants"
        ],
        "summary": "Create a new plant file (private)",
        "operationId": "createPlantFile",
        "description": "Allows creating a plant file with a photo, description, growthForm and origin. Authorization is required.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/plantCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Plant file created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully created a plant file!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/plant"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/plants/own": {
      "get": {
        "tags": [
          "Plants"
        ],
        "summary": "Get user's own plants (private)",
        "operationId": "getOwnPlants",
        "description": "Returns a list of all plants created by a user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "growthForm",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "tree",
                "shrub",
                "herb",
                "grass",
                "vine",
                "succulent",
                "fern",
                "moss"
              ]
            },
            "description": "Filter plants by growth form"
          },
          {
            "name": "origin",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "wild",
                "cultivated"
              ]
            },
            "description": "Filter plant by origin"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully fetched plant list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/plant"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/plants/favorites": {
      "get": {
        "tags": [
          "Plants"
        ],
        "summary": "Get a list of user's favorite plants' ids (private)",
        "operationId": "getFavPlants",
        "description": "Returns a list of ids of plants that users marked as favorites",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Here's you list of favorites",
