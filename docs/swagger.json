  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "plant": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "description",
          "growthForm",
          "origin",
          "userId"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "format": "mongo-ObjectId",
            "example": "665123abc321cc0011aa23ef"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "photo": {
            "type": "string"
          },
          "growthForm": {
            "type": "string",
            "enum": [
              "tree",
              "shrub",
              "herb",
              "grass",
              "vine",
              "succulent",
              "fern",
              "moss"
            ]
          },
          "origin": {
            "type": "string",
            "enum": [
              "wild",
              "cultivated"
            ]
          },
          "userId": {
            "type": "string",
            "format": "mongo-ObjectId",
            "example": "665123abc321cc0011aa23ef"
          }
        }
      },
      "plantCreate": {
        "type": "object",
        "required": [
          "name",
          "description",
          "growthForm",
          "origin"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "growthForm": {
            "type": "string",
            "enum": [
              "tree",
              "shrub",
              "herb",
              "grass",
              "vine",
              "succulent",
              "fern",
              "moss"
            ]
          },
          "origin": {
            "type": "string",
            "enum": [
              "wild",
              "cultivated"
            ]
          },
          "photo": {
            "type": "string",
            "format": "binary"
          }
        }
      },
      "user": {
        "type": "object",
        "required": [
          "_id",
          "username",
          "email",
          "favoritePlants",
          "verify",
          "authProvider"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "UsersId (MongoDB ObjectId)",
            "example": "68ac2873b0640ef82fb32038"
          },
          "username": {
            "type": "string",
            "description": "User's name",
            "example": "Peter Parker"
          },
          "email": {
            "type": "string",
            "maxLength": 128,
            "pattern": ".+@.+\\..+"
          },
          "favoritePlants": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "PlantId (Mongo ObjectId)"
            }
          },
          "verify": {
            "type": "boolean",
            "description": "changes to true after user has verified their account via email"
          },
          "authProvider": {
            "type": "string",
