{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Plantlog",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of Plantlog app"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://example.com/api/v1"
    }
  ],
  "tags": [
    {
      "name": "Plants",
      "description": "Operations about plants."
    },
    {
      "name": "Auth",
      "description": "Auth operations."
    }
  ],
  "paths": {
    "/plants": {
      "get": {
        "tags": [
          "Plants"
        ],
        "summary": "Get all plants",
        "operationId": "getAllPlants",
        "description": "Returns a list of all plants available to users",
        "security": [],
        "parameters": [
          {
            "name": "growthForm",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "tree",
                "shrub",
                "herb",
                "grass",
                "vine",
                "succulent",
                "fern",
                "moss"
              ]
            },
            "description": "Filter plants by growth form"
          },
          {
            "name": "origin",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "wild",
                "cultivated"
              ]
            },
            "description": "Filter plant by origin"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully fetched plant list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/plant"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "plant": {
        "type": "object",
        "required": [
          "name",
          "description",
          "growthForm",
          "origin",
          "userId"
        ],
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "photo": {
            "type": "string"
          },
          "growthForm": {
            "type": "string",
            "enum": [
              "tree",
              "shrub",
              "herb",
              "grass",
              "vine",
              "succulent",
              "fern",
              "moss"
            ]
          },
          "origin": {
            "type": "string",
            "enum": [
              "wild",
              "cultivated"
            ]
          },
          "userId": {
            "type": "string"
          }
        }
      }
    }
  }
}