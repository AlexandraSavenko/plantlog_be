              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "format": "mongo-ObjectId",
                        "example": "68ac425c67bf894ba7634759"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      },
      "post": {
        "tags": [
          "Plants"
        ],
        "summary": "Add or delete a plant id from a list of favorites (private)",
        "operationId": "toggleFav",
        "description": "Allows adding or deleting a plant file to or from the list of favorites.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
